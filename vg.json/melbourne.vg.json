{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1200,
    "height": 800,
    "projection": {
        "type": "equirectangular"
    },
    "layer": [
        {
            "data": {
                "url": "/data/victoria.topo.json",
                "format": {
                    "type": "topojson",
                    "feature": "victoria.geo"
                }
            },
            "transform": [
                {
                    "lookup": "properties.vic_loca_2",
                    "from": {
                        "data": {
                            "url": "/data/melbourne_house_prices.csv"
                        },
                        "key": "Suburb"
                    },
                    "as": "s"
                },
                {
                    "calculate": "'Data is not available'",
                    "as": "Average Price"
                }
            ],
            "mark": {
                "type": "geoshape"
            },
            "encoding": {
                "color": {
                    "value": "lightgray"
                },
                "tooltip": [
                    {
                        "field": "properties.vic_loca_2",
                        "type": "nominal",
                        "title": "Suburb"
                    },
                    {
                        "field": "Average Price"
                    }
                ]
            }
        },
        {
            "data": {
                "url": "/data/melbourne_house_prices.csv"
            },
            "transform": [
                {
                    "lookup": "Suburb",
                    "from": {
                        "data": {
                            "url": "/data/victoria.topo.json",
                            "format": {
                                "type": "topojson",
                                "feature": "victoria.geo"
                            }
                        },
                        "key": "properties.vic_loca_2"
                    },
                    "as": "sub"
                }
            ],
            "mark": {
                "type": "geoshape"
            },
            "encoding": {
                "shape": {
                    "field": "sub",
                    "type": "geojson"
                },
                "color": {
                    "field": "Price",
                    "type": "quantitative",
                    "aggregate": "mean",
                    "scale": {
                        "scheme": "blues"
                    }
                },
                "tooltip": [
                    {
                        "field": "Suburb",
                        "type": "nominal"
                    },
                    {
                        "field": "Price",
                        "type": "quantitative",
                        "aggregate": "mean",
                        "title": "Average Price",
                        "format": ",d"
                    }
                ]
            }
        }
    ]
}