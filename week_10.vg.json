{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Average House Prices in Melbourne Suburbs (2016-2018)",
    "data": {
        "url": "data/melbourne_house_prices.csv"
    },
    "params": [
        {
            "name": "Rooms_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    1,
                    2,
                    3,
                    4,
                    5,
                    6
                ],
                "labels": [
                    "Show All",
                    "1",
                    "2",
                    "3",
                    "4",
                    "5",
                    "6"
                ],
                "name": "Rooms Selection: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.Price > 1000000"
        },
        {
            "filter": "datum.Postcode < 3020"
        },
        {
            "filter": "Rooms_selection == null || datum.Rooms == Rooms_selection"
        }
    ],
    "layer": [
        {
            "mark": "bar",
            "encoding": {
                "x": {
                    "field": "Suburb",
                    "type": "nominal"
                },
                "y": {
                    "aggregate": "mean",
                    "field": "Price",
                    "type": "quantitative"
                },
                "tooltip": [
                    {
                        "field": "Suburb",
                        "type": "nominal"
                    },
                    {
                        "field": "Postcode",
                        "type": "nominal"
                    },
                    {
                        "field": "Price",
                        "type": "quantitative",
                        "aggregate": "mean",
                        "format": ",d"
                    },
                    {
                        "field": "Rooms",
                        "type": "quantitative",
                        "aggregate": "mean",
                        "format": "d"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "top",
                "dx": -12,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {
                    "field": "Suburb",
                    "type": "nominal"
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                    "condition": {
                        "test": "datum['Suburb'] == 'Melbourne'",
                        "value": 1
                    },
                    "value": 0
                },
                "tooltip": [
                    {
                        "field": "Suburb",
                        "type": "nominal"
                    },
                    {
                        "field": "Postcode",
                        "type": "nominal"
                    },
                    {
                        "field": "Price",
                        "type": "quantitative",
                        "aggregate": "mean",
                        "format": ",d"
                    },
                    {
                        "field": "Rooms",
                        "type": "quantitative",
                        "aggregate": "mean",
                        "format": "d"
                    }
                ]
            }
        }
    ]
}