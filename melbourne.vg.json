{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "title": "House Prices of Melbourne",
    "projection": {
        "type": "equirectangular"
    },
    "layer": [
        {
            "data": {
                "url": "data/victoria.topo.json",
                "format": {
                    "type": "topojson",
                    "feature": "victoria.geo"
                }
            },
            "transform": [
                {
                    "lookup": "properties.vic_loca_2",
                    "from": {
                        "data": {
                            "url": "data/melbourne_house_prices.csv"
                        },
                        "key": "Suburb",
                        "fields": [
                            "Price"
                        ]
                    }
                },
                {
                    "calculate": "datum.Price",
                    "as": "House Prices"
                }
            ],
            "mark": {
                "type": "geoshape"
            },
            "encoding": {
                "color": {
                    "value": "lightgray"
                },
                "tooltip": [
                    {
                        "field": "properties.vic_loca_2",
                        "type": "nominal",
                        "title": "Suburb"
                    },
                    {
                        "field": "Price",
                        "type": "quantitative"
                    }
                ]
            }
        },
        {
            "data": {
                "url": "data/victoria.topo.json",
                "format": {
                    "type": "topojson",
                    "feature": "victoria.geo"
                }
            },
            "transform": [
                {
                    "lookup": "properties.vic_loca_2",
                    "from": {
                        "data": {
                            "url": "data/melbourne_house_prices.csv"
                        },
                        "key": "Suburb",
                        "fields": [
                            "Price"
                        ]
                    }
                },
                {
                    "filter": "datum.Price > 0"
                },
                {
                    "calculate": "datum.Price",
                    "as": "House Prices"
                }
            ],
            "mark": {
                "type": "geoshape"
            },
            "encoding": {
                "color": {
                    "value": "blue"
                },
                "tooltip": [
                    {
                        "field": "properties.vic_loca_2",
                        "type": "nominal",
                        "title": "Suburb"
                    },
                    {
                        "field": "Price",
                        "type": "quantitative"
                    }
                ]
            }
        }
    ]
}